{
  "name": "<%= appname %>",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "6.1.0"
  },
  "files": [
    "app/views",
    "config",
    "helpers",
    "logs",
    "public",
    "app.js"
  ],
  "scripts": {
    "start": "node app",
    "test": "mocha tests --recursive --reporter spec",
    "clean": "gulp clean --gulpfile tasks/index.js",
    "build": "gulp --gulpfile tasks/index.js",
    "dev": "NODE_ENV=development npm run build -- --watch --serve",
    "stage": "NODE_ENV=staging npm run build -- --serve",
    "prod": "NODE_ENV=production npm run build -- --serve",
    "dev:server": "PRISMIC_PREVIEWS_ENABLED=true NODE_ENV=development npm run build && nodemon --ext js,json,pug app",
    "stage:server": "PRISMIC_PREVIEWS_ENABLED=true NODE_ENV=staging npm run build && node app",
    "prod:server": "PRISMIC_PREVIEWS_ENABLED=true NODE_ENV=production npm run build && node app"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "fs-extra": "^0.30.0",
    "i18n": "^0.8.3",
    "lodash": "^4.13.1",
    "marked": "^0.3.5",
    "method-override": "^2.3.6",
    "moment": "^2.14.1",
    "morgan": "^1.7.0",
    "prismic.io": "^3.1.3",
    "pug": "^2.0.0-beta3",
    "require-dir": "^0.3.0",
    "serve-favicon": "^2.3.0"
  },
  "devDependencies": {
    "async": "^2.0.0-rc.6",
    "chalk": "^1.1.3",
    "gulp-sys-metalprismic": "^3.0.3",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "page-manager": "^1.2.0",
    "supertest": "^1.2.0",
    "webfontloader": "^1.6.26"
  }
}
